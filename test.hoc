    }
}

endtemplate neuron

objref Hneuron[2]

Hneuron[0] = new neuron()
Hneuron[1] = new neuron()



objectvar stim2[2]
for i=0, 1 Hneuron[i].soma{
    //stim2[i] = new GaussianNoise(0.5)
